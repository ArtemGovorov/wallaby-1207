{
  "compilerOptions": {
    "strictNullChecks": true,
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./compiledts",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "routes/*": ["client/components/routes/*"],
      "components/*": ["client/components/*"],
      "hex/*": ["domain/hex/*"],
      "combat/*": ["domain/combat/*"]
    },
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "typings/browser",
    "typings/browser.d.ts",
    "firebase"
  ],
  "compileOnSave": false
}